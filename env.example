# Splitwise++ Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DATABASE
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://swp:swp@localhost:5432/swp

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secrets (MUST be at least 32 characters long)
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here-32-chars-min
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here-32-chars-min

# Node environment
NODE_ENV=development

# =============================================================================
# REDIS
# =============================================================================
# Redis connection string for caching and queues
REDIS_URL=redis://localhost:6379

# =============================================================================
# OBJECT STORAGE (S3/MinIO)
# =============================================================================
# S3-compatible storage for receipts and files
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=swp-receipts
S3_REGION=us-east-1

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Comma-separated list of allowed origins
# For development: http://localhost:8081,http://localhost:8080
# For production: https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=http://localhost:8081,http://localhost:8080

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Email service endpoint
# EMAIL_SERVICE_URL=https://api.sendgrid.com/v3/mail/send

# Push notification service
# PUSH_NOTIFICATION_URL=https://api.pushover.net/1/messages.json

# Metrics collection endpoint
# METRICS_ENDPOINT=https://api.datadoghq.com/api/v1/series

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These are safe defaults for local development
# NEVER use these in production!

# Development JWT secrets (32+ chars)
# JWT_ACCESS_SECRET=dev_secret_that_is_long_enough_for_development_only
# JWT_REFRESH_SECRET=dev_refresh_secret_that_is_long_enough_for_development_only

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. All secrets are properly generated (32+ characters)
# 2. CORS_ORIGINS contains only your production domains
# 3. NODE_ENV=production
# 4. SENTRY_DSN is configured for error tracking
# 5. Database and Redis are using production instances
# 6. S3 credentials have appropriate permissions
# 7. All environment variables are set in your deployment platform
